

<h4 class="d-flex justify-content-between mb-4">
<span>Posts</span>
<%= link_to 'New Post', new_post_path, class:'btn btn-primary' %>
</h4>

<% @posts.each do |post| %>
  <%= link_to edit_post_path(post), class:'text-decoration-none' do %>
      <div class="card mb-3">
      <div class="card-body">
      <h5 class="card-title mb-1 text-dark"><%= post.title %></h5>
      <p class="text-secondary mb-0"><%= post.description %></p>
    
      <td><%= link_to 'Show', post , class:'btn btn-info' %></td>
      <td><%= link_to 'Edit', edit_post_path(post) , class:'btn btn-warning' %></td>
      <td><%= link_to 'Destroy', post, method: :delete,class:'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
     
      </div>
      </div>
  <% end %>
  <% end %>
